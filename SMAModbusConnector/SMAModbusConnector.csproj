<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <AssemblyName>SMAModbusConnector</AssemblyName>
        <RootNamespace>SMAModbusConnector</RootNamespace>
        <Title>SMA Modbus Connector</Title>
        <Authors>Klaus Moster</Authors>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Description>A Modbus Connector for SMA devices</Description>
        <PackageVersion>1.7.0</PackageVersion>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
    </PropertyGroup>

    <ItemGroup>
        <None Include="../README.md" Pack="true" PackagePath="\"/>
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="FluentModbus" Version="5.2.0" />
    </ItemGroup>

    <ItemGroup>
      <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleToAttribute">
        <_Parameter1>SMAModbusConnector.Tests</_Parameter1>
      </AssemblyAttribute>
      <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleToAttribute">
        <_Parameter1>DynamicProxyGenAssembly2</_Parameter1>
      </AssemblyAttribute>
    </ItemGroup>
</Project>
